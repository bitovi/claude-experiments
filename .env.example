# Example environment file for Claude MCP Atlassian integration
# Copy this to .env and fill in your actual values

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# Jira Configuration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token

# MCP Server Configuration
# Update this with your ngrok URL when running locally
MCP_JIRA_ENDPOINT=https://your-ngrok-url.ngrok-free.app/mcp/

# MCP Server Logging
MCP_VERBOSE=true
MCP_LOGGING_STDOUT=true

# OAuth PKCE Configuration
# Local redirect URI for OAuth callback (port will be automatically extracted)
OAUTH_REDIRECT_URI=http://localhost:3000/callback
MCP_GIT_ENDPOINT=https://ddf3dc5476fc.ngrok-free.app/mcp

# Confluence Configuration (optional)
# CONFLUENCE_URL=https://your-company.atlassian.net/wiki
# CONFLUENCE_USERNAME=your.email@company.com
# CONFLUENCE_API_TOKEN=your_confluence_api_token

# Optional: Filter by specific projects/spaces
# JIRA_PROJECTS_FILTER=PROJ,DEV,SUPPORT
# CONFLUENCE_SPACES_FILTER=DEV,TEAM,DOC


