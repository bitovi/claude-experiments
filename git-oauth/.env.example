# OAuth Git Service Configuration
# Copy this to .env and fill in your values

# GitHub OAuth App Configuration
# Create at: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# Service Configuration
PORT=3000
SERVICE_URL=http://localhost:3000
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# Anthropic API (for MCP integration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# MCP Git Server Endpoint
MCP_GIT_ENDPOINT=https://your-ngrok-url.ngrok-free.app/mcp

# Optional: Database for production token storage
# DATABASE_URL=postgres://user:pass@localhost:5432/oauth_git_service
# REDIS_URL=redis://localhost:6379

# Security (generate random strings for production)
JWT_SECRET=your_jwt_secret_for_session_signing
ENCRYPTION_KEY=your_32_char_encryption_key_here_

# Production settings
NODE_ENV=development
LOG_LEVEL=info
